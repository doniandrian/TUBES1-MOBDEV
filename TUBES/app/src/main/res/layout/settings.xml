<!--        android:layout_margin="15dp"-->
<!--        android:text="Font Size"-->
<!--        android:textAllCaps="false"-->
<!--        />-->

    <RelativeLayout
        android:id="@+id/containerFontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textSettings"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/font_size_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textSize="20dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="10dp"

            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right_icon"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="12dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerFontSize"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-32dp"
        android:background="@drawable/border"
        android:paddingLeft="2dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/dark_mode_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"

            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerDisplayTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerDarkMode"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/border"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/display_time_icon"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Time"
            android:textSize="20dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="5dp"

            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>


</RelativeLayout>