    <RelativeLayout
        android:id="@+id/containerFontSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/font_size_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="10dp"
            android:text="Font Size"
            android:textSize="20dp"

            />


        <ImageButton
            android:id="@+id/font_size"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/arrow_right_icon"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerFontSize"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:paddingLeft="2dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/dark_mode_icon" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="Dark Mode"
            android:textSize="20dp"

            />

        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerDisplayTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerDarkMode"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/display_time_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="5dp"
            android:text="Display Date &amp; Time"
            android:textSize="20dp"

            />

        <Switch
            android:id="@+id/switchDisplayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:checked="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerDisplayTime"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/about_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="5dp"
            android:text="About"
            android:textSize="20dp"

            />

        <ImageButton
            android:id="@+id/About"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/arrow_right_icon"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_alignParentEnd="true"
            />
        <RelativeLayout

            android:id="@+id/fontpopup"
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="300dp"
            android:layout_centerInParent="true">
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
